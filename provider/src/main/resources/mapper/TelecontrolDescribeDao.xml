<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dubbo.provider.dao.TelecontrolDescribeDao">

    <resultMap type="com.example.dubbo.api.entity.TelecontrolDescribe" id="TelecontrolDescribeMap">
        <result property="equipmentId" column="equipment_id" jdbcType="VARCHAR"/>
        <result property="commandNumber" column="command_number" jdbcType="VARCHAR"/>
        <result property="describeInfo" column="describe_info" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TelecontrolDescribeMap">
        select
          equipment_id, command_number, describe_info
        from mcs.t_telecontrol_describe
        where equipment_id = #{equipmentId}
        and  command_number = #{commandNumber}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TelecontrolDescribeMap">
        select
          equipment_id, command_number, describe
        from mcs.t_telecontrol_describe
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TelecontrolDescribeMap">
        select
          equipment_id, command_number, describe
        from mcs.t_telecontrol_describe
        <where>
            <if test="equipmentId != null and equipmentId != ''">
                and equipment_id = #{equipmentId}
            </if>
            <if test="commandNumber != null and commandNumber != ''">
                and command_number = #{commandNumber}
            </if>
            <if test="describe != null and describe != ''">
                and describe = #{describe}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="equipmentId" useGeneratedKeys="true">
        insert into mcs.t_telecontrol_describe(describe)
        values (#{describe})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mcs.t_telecontrol_describe
        <set>
            <if test="describe != null and describe != ''">
                describe = #{describe},
            </if>
        </set>
        where equipment_id = #{equipmentId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mcs.t_telecontrol_describe where equipment_id = #{equipmentId}
    </delete>

</mapper>