<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="resources.dao.TTelecontrolDao">

    <resultMap type="resources.entity.TTelecontrol" id="TTelecontrolMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="telecontrolName" column="telecontrol_name" jdbcType="VARCHAR"/>
        <result property="parameter" column="parameter" jdbcType="VARCHAR"/>
        <result property="time" column="time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TTelecontrolMap">
        select
          id, telecontrol_name, parameter, time
        from mcs.t_telecontrol
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TTelecontrolMap">
        select
          id, telecontrol_name, parameter, time
        from mcs.t_telecontrol
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TTelecontrolMap">
        select
          id, telecontrol_name, parameter, time
        from mcs.t_telecontrol
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="telecontrolName != null and telecontrolName != ''">
                and telecontrol_name = #{telecontrolName}
            </if>
            <if test="parameter != null and parameter != ''">
                and parameter = #{parameter}
            </if>
            <if test="time != null">
                and time = #{time}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into mcs.t_telecontrol(telecontrol_name, parameter, time)
        values (#{telecontrolName}, #{parameter}, #{time})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mcs.t_telecontrol
        <set>
            <if test="telecontrolName != null and telecontrolName != ''">
                telecontrol_name = #{telecontrolName},
            </if>
            <if test="parameter != null and parameter != ''">
                parameter = #{parameter},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mcs.t_telecontrol where id = #{id}
    </delete>

</mapper>